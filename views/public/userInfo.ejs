<!--个人信息-->
<%if(userInfo){%>
<div class="aw-mod">
    <div class="mod-head">
        <h3>个人信息</h3>
    </div>
    <div class="mod-body">
        <dl>
            <dt class="pull-left aw-border-radius-5">
                <a href="/user/<%= userInfo.name %>"><img src="<%= userInfo.avatar %>"></a>
            </dt>
            <dd class="pull-left">
                <a class="aw-user-name" href="/user/<%= userInfo.name %>">
                    <%= userInfo.name %>
                </a>
                <a href="/user/<%= userInfo.name %>" class="pull-right">更多</a>
            </dd>
        </dl>
    </div>
    <div class="mod-footer">
        <%= userInfo.motto %>
    </div>
</div>
<%}%>