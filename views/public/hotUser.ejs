<div class="aw-mod aw-text-align-justify">
    <div class="mod-head">
        <a href="/users" class="pull-right">更多</a>
        <h3>热门用户</h3>
    </div>
    <div class="mod-body">
        <% if(hotUsers.length !== 0){%>
        <% hotUsers.forEach(function(user){%>
        <dl>
            <dt class="pull-left aw-border-radius-5">
                <a href="/user/<%= user.name %>"><img src="<%= user.avatar %>"></a>
            </dt>
            <dd class="pull-left">
                <a href="#" class="aw-user-name"><%= user.name %></a>
                <p class="signature"></p>
                <p>
                    积 分 : <%= user.score %> ,
                    发 表 : <%= user.article_count %>
                </p>
            </dd>
        </dl>
        <%})%>
        <%}%>
    </div>
</div>