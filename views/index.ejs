<div class="aw-container-wrap">
    <div class="container">
        <div class="row">
            <div class="aw-content-wrap clearfix">
                <div class="col-sm-12 col-md-9 aw-main-content">
                    <!--文章的检索-->
                    <ul class="nav nav-tabs aw-nav-tabs active hidden-xs">
                        <li class="<%= category == 'job' ? 'active' : '' %>"><a href="/?category=job">招聘</a></li>
                        <li class="<%= category == 'ask' ? 'active' : '' %>"><a href="/?category=ask">问答</a></li>
                        <li class="<%= category == 'share' ? 'active' : '' %>"><a href="/?category=share">分享</a></li>
                        <h2 class="hidden-xs"><i class="fa fa-bars"></i> 发现</h2>
                    </ul>
                    <!--文章的检索-->
                    <!--文章列表-->
                    <div class="aw-mod aw-explore-list">
                        <div class="mod-body">
                            <div class="aw-common-list">
                                <% if(articles.length > 0){%>
                                <% articles.forEach(function(article){%>
                                <div class="aw-item">
                                    <a class="aw-user-name hidden-xs" href="/user/<%= article.author.name %>">
                                        <img src="<%= article.author.avatar %>">
                                    </a>
                                    <div class="aw-question-content">
                                        <h4>
                                            <a href="/question/<%= article._id %>"><%= article.title %></a>
                                            <span class="aw-user-name" style="background-color:#99cfff;color:white">
                                                &nbsp;<%= article.categoryName %>&nbsp;
                                            </span>
                                        </h4>
                                        <% if(article.last_reply && article.last_reply_author){%>
                                        <div class="pull-right hidden-xs contribute">
                                            <span class="pull-right text-color-999">贡献</span>
                                            <a class="aw-user-name" href="/user/<%= article.last_reply_author.name %>">
                                                <img src="<%= article.last_reply_author.avatar %>">
                                            </a>
                                        </div>
                                        <%}else{%>
                                        <a href="/question/<%= article._id %>#reply_form"  class="pull-right text-color-999">回复</a>
                                        <%}%>
                                        <p>
                                            <a href="/user/<%= article.author.name %>" class="aw-user-name">
                                                <%= article.author.name %>
                                            </a>
                                            <span class="text-color-999">
                                                发起了问题  • <%= article.comment_num %> 个回复 • <%= article.click_num %> 次浏览 • <%= article.create_time_ago() %>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <%})%>
                                <%}%>
                            </div>
                        </div>
                        <div class="mod-footer">
                            <%if(articles.length > 0 && pageInfo.pages){%>
                            <div class="page-control">
                                <ul class="pagination pull-right">
                                    <% pageInfo.pages.forEach(function(page){%>
                                    <li class="<%= page == pageInfo.currentPage ? 'active':'' %>">
                                        <a class="loadpage" href="/?page=<%= page %><%= category !== '' ? '&category=' + category : '' %>">
                                            <%= page %>
                                        </a>
                                    </li>
                                    <%})%>
                                </ul>
                            </div>
                            <%}%>
                        </div>
                    </div>
                </div>
                <!--侧边栏-->
                <div class="col-sm-12 col-md-3 aw-side-bar hidden-xs hidden-sm">
                    <% include public/userInfo %>
                    <% include public/hotUser %>
                </div>
            </div>
        </div>
    </div>
</div>
